  arrayDeMonstros[1].intAtaqueMagico = 25;
  arrayDeMonstros[1].intChanceEvasao = 0;
  arrayDeMonstros[1].intChanceCritico = 0;
  arrayDeMonstros[1].intArmadura = 25;
  arrayDeMonstros[1].intResistenciaMagica = 30;
  arrayDeMonstros[1].intDanoFisicoExtra = 5;
  arrayDeMonstros[1].intDanoMagicoExtra = 5;
  arrayDeMonstros[1].intReducaoDanoFisicoExtra = 10;
  arrayDeMonstros[1].intExperienciaMorte = GerarValorAleatorio(500,601);

  strcpy(arrayDeMonstros[2].strNome, "Caranguejo Mutante");
  arrayDeMonstros[2].tipo= 1;
  arrayDeMonstros[2].regiao= 1;
  arrayDeMonstros[2].intVida = GerarValorAleatorio(100,151);
  arrayDeMonstros[2].intMana = 100;
  arrayDeMonstros[2].intAtaqueFisico = 5;
  arrayDeMonstros[2].intAtaqueMagico = 5;
  arrayDeMonstros[2].intChanceEvasao = 5;
  arrayDeMonstros[2].intChanceCritico = 40;
  arrayDeMonstros[2].intArmadura = 25;
  arrayDeMonstros[2].intResistenciaMagica = 20;
  arrayDeMonstros[2].intDanoFisicoExtra = 0;
  arrayDeMonstros[2].intDanoMagicoExtra = 0;
  arrayDeMonstros[2].intReducaoDanoFisicoExtra = 5;
  arrayDeMonstros[2].intExperienciaMorte = GerarValorAleatorio(130,201);

  strcpy(arrayDeMonstros[3].strNome, "Orc Arqueiro");
  arrayDeMonstros[3].tipo= 1;
  arrayDeMonstros[3].regiao= 1;
  arrayDeMonstros[3].intVida = 60;
  arrayDeMonstros[3].intMana = 100;
  arrayDeMonstros[3].intAtaqueFisico = 25;
  arrayDeMonstros[3].intAtaqueMagico = 10;
  arrayDeMonstros[3].intChanceEvasao = 35;
  arrayDeMonstros[3].intChanceCritico = 15;
  arrayDeMonstros[3].intArmadura = 5;
  arrayDeMonstros[3].intResistenciaMagica = 5;
  arrayDeMonstros[3].intDanoFisicoExtra = 15;
  arrayDeMonstros[3].intDanoMagicoExtra = 2;
  arrayDeMonstros[3].intReducaoDanoFisicoExtra = 2;
  arrayDeMonstros[3].intExperienciaMorte = GerarValorAleatorio(250,301);

  strcpy(arrayDeMonstros[4].strNome, "Orc Guerreiro");
  arrayDeMonstros[4].tipo= 1;
  arrayDeMonstros[4].regiao= 1;
  arrayDeMonstros[4].intVida = 100;
  arrayDeMonstros[4].intMana = 80;
  arrayDeMonstros[4].intAtaqueFisico = 12;
  arrayDeMonstros[4].intAtaqueMagico = 13;
  arrayDeMonstros[4].intChanceEvasao = 10;
  arrayDeMonstros[4].intChanceCritico = 15;
  arrayDeMonstros[4].intArmadura = 35;
  arrayDeMonstros[4].intResistenciaMagica = 15;
  arrayDeMonstros[4].intDanoFisicoExtra = 10;
  arrayDeMonstros[4].intDanoMagicoExtra = 0;
  arrayDeMonstros[4].intReducaoDanoFisicoExtra = 5;
  arrayDeMonstros[4].intExperienciaMorte = GerarValorAleatorio(250,276);

  strcpy(arrayDeMonstros[5].strNome, "Troll Encouraçado");
  arrayDeMonstros[5].tipo = 1;
  arrayDeMonstros[5].regiao = 1;
  arrayDeMonstros[5].intVida = GerarValorAleatorio(150,226);
  arrayDeMonstros[5].intMana = 100;
  arrayDeMonstros[5].intAtaqueFisico = 15;
  arrayDeMonstros[5].intAtaqueMagico = 10;
  arrayDeMonstros[5].intChanceEvasao = 15;
  arrayDeMonstros[5].intChanceCritico = 20;
  arrayDeMonstros[5].intArmadura = 15;
  arrayDeMonstros[5].intResistenciaMagica = 20;
  arrayDeMonstros[5].intDanoFisicoExtra = 5;
  arrayDeMonstros[5].intDanoMagicoExtra = 5;
  arrayDeMonstros[5].intReducaoDanoFisicoExtra = 10;
  arrayDeMonstros[5].intExperienciaMorte = 300;

  strcpy(arrayDeMonstros[6].strNome, "Lorde Orc Gar'Tul");
  arrayDeMonstros[6].tipo = 1;
  arrayDeMonstros[6].regiao = 3;
  arrayDeMonstros[6].intVida = GerarValorAleatorio(300,400);
  arrayDeMonstros[6].intMana = 100;
  arrayDeMonstros[6].intAtaqueFisico = 25;
  arrayDeMonstros[6].intAtaqueMagico = 30;
  arrayDeMonstros[6].intChanceEvasao = 25;
  arrayDeMonstros[6].intChanceCritico = 10;
  arrayDeMonstros[6].intArmadura = 30;
  arrayDeMonstros[6].intResistenciaMagica = 20;
  arrayDeMonstros[6].intDanoFisicoExtra = 5;
  arrayDeMonstros[6].intDanoMagicoExtra = 5;
  arrayDeMonstros[6].intReducaoDanoFisicoExtra = 3;
  arrayDeMonstros[6].intExperienciaMorte = 300;

  strcpy(arrayDeMonstros[7].strNome, "Goblin Perverso");
  arrayDeMonstros[7].tipo = 1;
  arrayDeMonstros[7].regiao = 1;
  arrayDeMonstros[7].intVida = GerarValorAleatorio(145,189);
  arrayDeMonstros[7].intMana = 124;
  arrayDeMonstros[7].intAtaqueFisico = 12;
  arrayDeMonstros[7].intAtaqueMagico = 12;
  arrayDeMonstros[7].intChanceEvasao = 35;
  arrayDeMonstros[7].intChanceCritico = 35;
  arrayDeMonstros[7].intArmadura = 5;
  arrayDeMonstros[7].intResistenciaMagica = 5;
  arrayDeMonstros[7].intDanoFisicoExtra = 15;
  arrayDeMonstros[7].intDanoMagicoExtra = 0;
  arrayDeMonstros[7].intReducaoDanoFisicoExtra = 2;
  arrayDeMonstros[7].intExperienciaMorte = GerarValorAleatorio(250,350);

  strcpy(arrayDeMonstros[8].strNome, "Ogro Violento");
  arrayDeMonstros[8].tipo= 1;
  arrayDeMonstros[8].regiao= 1;
  arrayDeMonstros[8].intVida = GerarValorAleatorio(130,171);
  arrayDeMonstros[8].intMana = 100;
  arrayDeMonstros[8].intAtaqueFisico = 15;
  arrayDeMonstros[8].intAtaqueMagico = 15;
  arrayDeMonstros[8].intChanceEvasao = 15;
  arrayDeMonstros[8].intChanceCritico = 15;
  arrayDeMonstros[8].intArmadura = 20;
  arrayDeMonstros[8].intResistenciaMagica = 20;
  arrayDeMonstros[8].intDanoFisicoExtra = 13;
  arrayDeMonstros[8].intDanoMagicoExtra = 13;
  arrayDeMonstros[8].intReducaoDanoFisicoExtra = 12;
  arrayDeMonstros[8].intExperienciaMorte = GerarValorAleatorio(230,400);

  //--------------------------------------------------------------------------
  fMenuInicial(&jogador, arrayDeItens, arrayDeMonstros, arrayDeHabilidades, arqGameState);
  SalvarJogo(&jogador, arrayDeItens, arrayDeMonstros, arrayDeHabilidades, arqGameState);
  getchar();
  fLerStatusEAtributos(&jogador);
  fChamarArea(&jogador,  arrayDeItens, arrayDeMonstros, arrayDeHabilidades,arqGameState);
  SalvarJogo(&jogador, arrayDeItens, arrayDeMonstros, arrayDeHabilidades, arqGameState);
  return 0;
}
