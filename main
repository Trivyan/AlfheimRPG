//-----------------------------------------------------------------------------
// LISTA DE MONSTROS

  strcpy(arrayDeMonstros[0].strNome, "Javali Selvagem");
  arrayDeMonstros[0].tipo = 1;
  arrayDeMonstros[0].regiao = 1;
