  strcpy(arrayDeMonstros[1].strNome, "Minotauro de Petricita");
  arrayDeMonstros[1].tipo= 1;
  arrayDeMonstros[1].regiao= 1;
  arrayDeMonstros[1].intVida = GerarValorAleatorio(250,311);
  arrayDeMonstros[1].intMana = 100;
